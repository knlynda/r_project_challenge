<h3><%= @package.name %></h3>

<table>
  <% @package.package_versions.each do |package_version| %>
    <tr>
      <td colspan="2"><%= package_version.number %></td>
    </tr>
    <tr>
      <td><b>Published at:</b></td>
      <td><%= package_version.published_at %></td>
    </tr>
    <tr>
      <td><b>Title:</b></td>
      <td><%= package_version.title %></td>
    </tr>
    <tr>
      <td><b>Description:</b></td>
      <td><%= package_version.description %></td>
    </tr>
    <% if package_version.authors %>
      <tr>
        <td><b>Authors:</b></td>
        <td>
          <%= render 'contributors', contributors: package_version.authors %>
        </td>
      </tr>
    <% end %>
    <% if package_version.maintainers %>
      <tr>
        <td><b>Maintainers:</b></td>
        <td>
          <%= render 'contributors', contributors: package_version.maintainers %>
        </td>
      </tr>
    <% end %>
  <% end %>
</table>
